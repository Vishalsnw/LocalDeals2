run = "./gradlew assembleDebug"
modules = ["java-graalvm22.3", "nix"]
[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "./gradlew assembleDebug"]

[workflows]
runButton = "Build Android App"

[[workflows.workflow]]
name = "Build Android App"
author = 46020226
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export JAVA_HOME=/nix/store/graalvm17-ce && ./gradlew assembleDebug"
